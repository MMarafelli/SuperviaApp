/* Estilos da calcConsumo seguindo EXATAMENTE o padrão da calcTintaEsfera */
.calc-consumo-container {
    padding: 0.75rem;
    overflow-x: hidden !important;
}

/* PRIMEIRO QUADRO - Total m² (2º child após PageTitle) - FUNDO BRANCO */
.calc-consumo-container .quadro-consumo:nth-child(2) {
    width: auto;
    min-height: auto;
    background: #ffffff !important; /* FUNDO BRANCO */
    border-radius: 1rem !important;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1) !important;
    border: 1px solid #e5e7eb !important;
    padding: 1rem !important;
    display: flex !important;
    flex-direction: column !important;
    margin: 0.5rem 0 !important;
}

/* SEGUNDO QUADRO - Cálculos (3º child após PageTitle) - FUNDO BRANCO EM MOBILE */
.calc-consumo-container .quadro-consumo:nth-child(3) {
    background: #ffffff !important;
    border-radius: 1rem !important;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1) !important;
    border: 1px solid #e5e7eb !important;
    padding: 1rem !important;
    margin: 0.5rem 0 !important;
    overflow: visible !important;
}

/* Para desktop - segundo quadro transparente */
@media (min-width: 1025px) {
    .calc-consumo-container .quadro-consumo:nth-child(3) {
        background: transparent !important;
        border: none !important;
        box-shadow: none !important;
        border-radius: 0 !important;
        margin: 0 !important;
        padding: 0 !important;
    }
}

/* Para tablets/telas médias - segundo quadro branco */
@media (min-width: 769px) and (max-width: 1024px) {
    .calc-consumo-container .quadro-consumo:nth-child(3) {
        background: #ffffff !important;
        border-radius: 1rem !important;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1) !important;
        border: 1px solid #e5e7eb !important;
        padding: 1rem !important;
        margin: 0.5rem 0 !important;
    }
}

/* MÁXIMA ESPECIFICIDADE - Força o primeiro quadro a ter fundo branco */
html body div.calc-consumo-container div.quadro-consumo:nth-child(2) {
    background: #ffffff !important;
    background-color: #ffffff !important;
}

/* MÁXIMA ESPECIFICIDADE - Força o segundo quadro a ter fundo branco em mobile */
@media (max-width: 768px) {
    html body div.calc-consumo-container div.quadro-consumo:nth-child(3) {
        background: #ffffff !important;
        background-color: #ffffff !important;
    }
}

/* MÁXIMA ESPECIFICIDADE - Força o segundo quadro a ter fundo branco em tablets */
@media (min-width: 769px) and (max-width: 1024px) {
    html body div.calc-consumo-container div.quadro-consumo:nth-child(3) {
        background: #ffffff !important;
        background-color: #ffffff !important;
    }
}

/* Inputs gerais */
.calc-consumo-container input,
.calc-consumo-container select,
.calc-consumo-container textarea {
    background: #fff !important;
    border: 1px solid #e5e7eb !important;
    border-radius: 0.5rem !important;
    padding: 0.5rem 0.75rem !important;
    color: #1f2937 !important;
    font-size: 0.875rem !important;
    transition: all 0.2s ease !important;
}

.calc-consumo-container input:focus,
.calc-consumo-container select:focus,
.calc-consumo-container textarea:focus {
    border-color: #ffcc29 !important;
    box-shadow: 0 0 0 3px rgba(255, 204, 41, 0.1) !important;
    outline: none !important;
}

/* Campo Total m² específico - read-only */
.calc-consumo-container .quadro-consumo:nth-child(2) input[name="totalMetrosPista"] {
    background: #f9fafb !important;
    cursor: default !important;
}

/* Labels seguindo padrão da Home */
.calc-consumo-container label {
    color: #374151 !important;
    font-size: 0.875rem !important;
    font-weight: 500 !important;
    margin-bottom: 0.25rem !important;
    display: block !important;
    text-shadow: none !important;
    font-style: normal !important; /* Remove itálico */
    font-weight: 400 !important;
}

/* Botões modernos seguindo EXATAMENTE o padrão da Home */
.modern-button {
    padding: 0.5rem 1rem !important;
    border: none !important;
    border-radius: 0.5rem !important;
    cursor: pointer !important;
    font-weight: 500 !important;
    font-size: 0.875rem !important;
    transition: all 0.2s ease !important;
    text-shadow: none !important;
    position: relative !important;
    overflow: visible !important;
    margin: 0.25rem !important;
    white-space: nowrap !important; /* Evita quebra de linha */
}

.modern-button:active {
    transform: translateY(0) !important;
    transition: all 0.1s ease !important;
}

/* Remove efeitos shimmer dos botões */
.modern-button::before {
    display: none !important;
}

/* SVGs de edição seguindo padrão da Home */
.svgHabilitarEdicao {
    width: 1.25rem !important;
    height: 1.25rem !important;
    cursor: pointer !important;
    transition: all 0.2s ease !important;
}

.svgHabilitarEdicao:hover {
    transform: scale(1.1) !important; /* Sem rotação */
    opacity: 0.7 !important;
}

/* Botões principais seguindo EXATAMENTE o padrão da Home */
.calc-consumo-container button.modern-button {
    padding: 0.5rem 1rem !important;
    border: none !important;
    border-radius: 0.5rem !important;
    cursor: pointer !important;
    font-weight: 500 !important;
    font-size: 0.875rem !important;
    transition: all 0.2s ease !important;
    margin: 0.25rem !important;
    min-height: 2.5rem !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    gap: 0.25rem !important;
    flex: 1 !important; /* Garante que todos os botões tenham o mesmo tamanho */
    min-width: 0 !important; /* Permite que o flexbox funcione corretamente */
    width: auto !important; /* Remove qualquer largura fixa */
}

/* Container dos botões para distribuição igual */
.botoes-container .flex {
    display: flex !important;
    gap: 0.5rem !important;
    align-items: stretch !important; /* Faz os botões terem a mesma altura */
}

/* Estilos de texto seguindo EXATAMENTE a hierarquia da Home */
.calc-consumo-container label,
.quadro-consumo label {
    color: #374151 !important;
    font-size: 0.875rem !important;
    font-weight: 500 !important;
    margin-bottom: 0.25rem !important;
    display: block !important;
    text-shadow: none !important;
    font-style: normal !important;
}

/* Tabela como card */
.tabela2TelaGrande {
    width: 100% !important;
    border-collapse: separate !important;
    border-spacing: 0 !important;
    background: #fff !important;
    border-radius: 1rem !important;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1) !important;
    border: 1px solid #e5e7eb !important;
    margin: 0.75rem 0 !important;
    overflow: hidden !important;
}

.tabela2TelaGrande>tbody>tr>td {
    padding: 1rem !important;
    border-bottom: 1px solid #e5e7eb !important;
    border-left: none !important;
    border-right: none !important;
    border-top: none !important;
}

.tabela2TelaGrande>tbody>tr:last-child>td {
    border-bottom: none !important;
}

/* Inputs dentro da tabela - transparentes */
.tabela2TelaGrande input,
.tabela2TelaGrande select {
    background: transparent !important;
    border: 1.5px solid #d1d5db !important;
    border-radius: 0.5rem !important;
    padding: 0.5rem !important;
    color: #374151 !important;
}

.tabela2TelaGrande input:focus,
.tabela2TelaGrande select:focus {
    border-color: #ffcc29 !important;
    box-shadow: 0 0 0 3px rgba(255, 204, 41, 0.1) !important;
    outline: none !important;
}

/* Gerais seguindo padrão da Home */
* {
    box-sizing: border-box;
}

table {
    border-collapse: collapse;
    width: 100%;
}

/* Responsividade seguindo padrão da Home */
@media (max-width: 1024px) {
    .calc-consumo-container {
        padding: 0.75rem;
    }
    
    /* Ambos os quadros com fundo branco em mobile e tablet */
    .calc-consumo-container .quadro-consumo:nth-child(2),
    .calc-consumo-container .quadro-consumo:nth-child(3) {
        background: #ffffff !important;
        border-radius: 1rem !important;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1) !important;
        border: 1px solid #e5e7eb !important;
        margin: 0.5rem 0 !important;
        padding: 1rem !important;
    }
    
    /* Tabela em mobile/tablet - sem shadow duplo */
    .tabela2TelaGrande {
        box-shadow: none !important;
        border: none !important;
        border-radius: 0 !important;
        margin: 0 !important;
    }
}